@{
    ViewBag.Title = "Home Page";
}

<style>

    body {
        /* background-color: #f2f2f2; */ /* Light gray background color */
        background: #f0f8ff;
    }

    #title {
        text-align: center;
        margin-bottom: 20px;
        font-family: Arial, sans-serif;
    }

    .lead {
        text-align: center;
        margin-bottom: 30px;
        font-family: Arial, sans-serif;
    }

    #saleInfoTitle {
        margin-bottom: 20px;
        font-family: Arial, sans-serif;
    }

    label {
        font-weight: bold;
        font-family: Arial, sans-serif;
    }

    input[type="text"],
    input[type="date"] {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        margin-bottom: 15px;
        box-sizing: border-box;
    }

        input[type="text"]::placeholder,
        input[type="date"]::placeholder {
            font-style: italic;
        }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .btn-custom {
        width: 40%;
        /*padding: 10px;*/
        /* background: linear-gradient(45deg, #007cc0, #0cbaba);*/
        color: #fff;
        border: none;
        border-radius: 35px;
        cursor: pointer;
        transition: background-color 0.3s;
        /*OLD BUTTON STYLE BELOW*/
        padding: 10px 20px;
        /*border-radius: 5px;*/
        margin-right: 10px;
        background-color: #0cbaba;
        /* border: 1px solid #007bff; */
        /*color: white;*/
        /*transition: all 0.3s ease;*/
    }

        .btn-custom.update:hover {
            /* filter: brightness(90%);*/
            background-color: orange !important;
            border-color: orange !important;
        }

        .btn-custom.delete:hover {
            /*filter: brightness(90%);*/
            background-color: red !important;
            border-color: red !important;
        }

        .btn-custom.addProduct {
            width: 15%;
            color: #fff;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.3s;
            padding: 10px 20px;
            margin-right: 10px;
            background-color: #0cbaba;
        }

            .btn-custom.addProduct:hover {
                background-color: #007cc0 !important;
                border-color: #007cc0 !important;
            }

        .btn-custom:hover {
            filter: brightness(90%);
            color: white;
            background-color: #2ecc71 !important;
            border-color: #2ecc71 !important; /* Darker Blue */
            /*color: #fff;*/
        }

        .btn-custom:focus {
            outline: none;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.5); /* Blue Shadow */
        }

    .form-container {
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 5px;
        width: 1100px;
        margin: 0 auto;
        background-color: white; /* White background color for the container */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-right: 20px;
    }

        .form-group:last-child {
            margin-right: 0;
        }

    #salesmanName {
        margin-left: 1px;
    }

    #remarks {
        margin-left: 1px;
    }

    #saleNo {
        margin-left: 1px;
    }

    #saleDate {
        margin-left: 1px;
    }

    #productRecordsTitle {
        text-align: center;
        margin-bottom: 60px;
        font-family: Arial, sans-serif;
    }

    .table-container {
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 5px;
        width: 1200px;
        margin: 20px auto;
        background-color: white; /* White background color for the container */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        /*width: 1100px;
        margin: 0 auto;*/
        /*display: flex;
        justify-content: center;*/
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        border-radius: 5px;
        overflow: hidden;
        overflow-x: auto;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    th,
    td {
        border: 1px solid #ccc;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    #totalInvoiceAmount {
        font-weight: bold;
    }

    .container2 {
        max-width: 1300px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .product-details-label {
        display: block;
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
        font-family: Arial, sans-serif;
        /*color: #333;*/
    }

    .form-group {
        margin-bottom: 20px;
    }

    #search {
        width: 200px;
        margin-bottom: 25px;
        float: right;
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 14px;
    }

    #productTable tbody tr:hover {
        animation: popUp 0.5s ease forwards;
        background: linear-gradient(45deg, #1dd1a1,#0cbaba);
        /* background-color: #f5f5f5;  Change to the desired color */
    }

    #productTable tbody tr:nth-child(odd) {
        background-color: #f9f9f9 !important;
    }


    #productTable tbody tr:nth-child(even) {
        background-color: #e9e9e9 !important;
    }

    .total-amount {
        width: 1000px;
        margin: 0 auto;
        text-align: right;
    }

    /*#productTable {
        border-collapse: separate;
        border-spacing: 0;
    }
        #productTable th,
        #productTable td {
            border-radius: 50px;
        }*/


    /*#productTable {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }*/

    /
    #productTable th {
        background-color: #f2f2f2;
        font-weight: bold;
        text-align: left;
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    input[type="text"],
    select,
    textarea,
    input[type="number"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 15px;
        box-sizing: border-box;
        margin-top: 5px;
    }

    textarea {
        resize: vertical;
    }

    .product-details-label {
        text-align: center;
        margin-bottom: 40px;
        font-family: Arial, sans-serif;
    }

    #productTable th {
        background-color: #e5e5e5;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        font-weight: bold;
        text-align: left;
        padding: 10px;
        border-bottom: 1px solid #ddd;
        font-family: Arial, sans-serif;
        font-size: 16px;
        color: black;
    }

    #salesmanName {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        margin-bottom: 5px;
        box-sizing: border-box;
        border-radius: 13px; /* Apply border radius */
        border: 1px solid #ccc; /* Apply border color and style */
    }

        #salesmanName::placeholder {
            font-style: italic;
        }

    #saleDate {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        margin-bottom: 5px;
        box-sizing: border-box;
        border-radius: 13px; /* Apply border radius */
        border: 1px solid #ccc;
    }

        #saleDate::placeholder {
            font-style: italic;
        }

    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    }
    /* Modal Content/Box */
    .modal-content {
        background-color: #fefefe;
        margin: 25px auto; /* 15% from the top and centered */
        padding: 20px;
        border: 1px solid #888;
        width: 25%; /* Could be more or less, depending on screen size */
        position: relative;
    }

    .close {
        background: #888;
        float: left;
        width: 20%;
        padding: 5px 10px;
        margin-top: 10px;
        border-radius: 10px;
        left: 60px;
        text-align: center;
    }

        .close:hover {
            background-color: gray !important;
        }

    .btn-custom.add {
        float: right;
        width: 20%;
        padding: 5px 10px;
        margin-top: 10px;
        border-radius: 10px;
        position: absolute;
        bottom: 20px;
        right: 10px;
    }

        .btn-custom.add:hover {
            background-color: orange !important;
        }

    .clearfix::after {
        content: "";
        clear: both;
        display: table;
    }

    .modal-content input[type="text"],
    .modal-content input[type="date"],
    .modal-content textarea {
        width: 400px;
        padding: 6px;
        margin-top: 5px;
        margin-bottom: 15px;
        box-sizing: border-box;
        box-sizing: border-box;
        border: 1px solid #ccc; /* Add a border */
        border-radius: 5px; /* Add border radius */
    }

    .modal-content textarea {
        resize: none; /* Disable resizing */
    }

    #productTable .delete,
    #productTable .update {
        padding: 5px 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-transform: uppercase;
        font-weight: bold;
    }

    #productTable .delete {
        background-color: red;
        color: white;
    }

    #productTable .update {
        background-color: orange;
        color: white;
    }

        #productTable .delete:hover,
        #productTable .update:hover {
            background-color: dimgrey !important;
            /*opacity: 0.8;*/
        }

</style>

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">SALE MANAGEMENT SYSTEM</h1>
        <p class="lead">We are here to keep the records of our sales</p>
    </section>
    <div class="row">
        
        <section class="col-md-6" aria-labelledby="saleInfoTitle">
            @*<h2 id="saleInfoTitle" style="margin-left: 250px;">Sale Information</h2>*@
            <div class="form-container">
               
                <form>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group" style="margin-left: 20px;">
                                <label for="saleNo">Sale No:</label>
                                <input type="text" class="form-control" id="saleNo" name="saleNo" placeholder="Enter a number" onkeypress="return isNumberKey(event)">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group" style="margin-left: 130px;">
                                <label for="salesmanName">Salesman:</label>
                                <select class="form-control" id="salesmanName" name="salesmanName">
                                    <option value="Saleman name">Saleman name</option>
                                    <option value="Saleman id">Saleman id</option>
                                    <!-- Add more options as needed -->
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group" style="margin-left: 20px;">
                                <label for="saleDate">Sale Date:</label>
                                <input type="date" class="form-control" id="saleDate" name="saleDate" placeholder="Select the date of the sale">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group" style="margin-left: 130px;">
                                <label for="remarks">Remarks:</label>
                                <input type="text" class="form-control" id="remarks" name="remarks" placeholder="Enter remarks">
                            </div>
                        </div>
                    </div>
                    <div class="form-group d-flex justify-content-center mt-5">
                        <button type="submit" class="btn btn-custom me-4">Save</button>
                        <button type="button" class="btn btn-custom me-4 update">Update</button>
                        <button type="button" class="btn btn-custom me-4 delete">Delete</button>
                    </div>

                </form>
            </div>
        </section>
    </div>
    <div class="container2">
        <div class="form-group">
            <label class="product-details-label" style="font-size: 36px; font-weight: bold; font-family: Arial, sans-serif; color: black;">Product Details</label>
            <div>
                <input type="text" id="search" placeholder="Search...">
            </div>
            <button id="addProduct" class="btn btn-custom me-4 addProduct">Add Product</button>
            <table id="productTable">
                <thead>
                    <tr>
                        <th>Product Code</th>
                        <th>Product Name</th>
                        <th>Product Price</th>
                        <th>Quantity</th>
                        <th>Total Amount</th>
                        <th>Date / Time</th>
                        <th>Delete</th>
                        <th>Update</th>
                    </tr>

                </thead>
                <tbody>
                    <tr>
                        <td>P001</td>
                        <td>Product 1</td>
                        <td>$10.00</td>
                        <td><input type="number" value="1" min="1"></td>
                        <td>$10.00</td>
                        <td>9/2/2024 9:48:31 AM</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="form-group total-amount">
            <label for="totalAmount">Total Invoice Amount</label>
            <input type="text" id="totalAmount" readonly>
        </div>
    </div>
    <div id="addProductModal" class="modal">
        <div class="modal-content">
            @*<span class="close">&times;</span>*@
            <h2 style="text-align: center; margin-bottom: 40px;">Product Detail</h2>
            <label for="productCode">Product Code:</label>
            <input type="text" id="productCode" placeholder="Product Code" required>
            @*<label for="productName">Product Name:</label>
                <input type="text" id="productName">
                <label for="productPrice">Product Price:</label>
                <input type="text" id="productPrice">*@
            <label for="productName">Product Name:</label>
            <input type="text" id="productName" onkeypress="return isTextKey(event)" placeholder="Product Name" required>
            <label for="productPrice">Product Price:</label>
            <input type="text" id="productPrice" onkeypress="return isNumberKey(event, this)" placeholder="Product Price" required>


            @*<label for="quantity">Quantity:</label>
                <input type="text" id="quantity">*@
            <button id="addProductBtn" class="btn-custom add">Add</button>
            <span class="close btn-custom">Close</span>
        </div>
    </div>
</main>
